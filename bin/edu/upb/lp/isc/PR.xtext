grammar edu.upb.lp.isc.PR with org.eclipse.xtext.common.Terminals

generate pR "http://www.upb.edu/lp/isc/PR"

Programa:
	';''Author'':' STRING
	';'name=ID
	(variables+=Variable)*	
	(definiciones+=Definicion)*
	(ejecuciones+=Ejecucion)*
	
;


Variable:
	{Variable}
	//(define id expr)
	'(''define' name =ID value=Value/* | STRING | 'TRUE' | 'FALSE'*/')'
;

Definicion:
	{Definicion}
	//(define (head args) body ...+)
	//value = (STRING | 'TRUE' | 'FALSE')
	'(''define''('name/*head*/=ID args=Argumento')'
		/*body*/'('operador=Operador value1=Value value2=Value')'
	')'
;

Value: RefValue | StringValue | IntValue;

RefValue:
	ref = [Argumento]
;

StringValue:
	str = STRING
;

IntValue:
	val = INT
;

Argumento:
	name=ID
;

Ejecucion:
	'?''('definiciones+=[Definicion] parametros+=Value*')'
;

Operador:
	'+'|'-'|'*'|'/'
;

